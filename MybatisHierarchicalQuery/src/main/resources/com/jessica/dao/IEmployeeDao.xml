<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jessica.dao.IEmployeeDao">
  <resultMap id="EmployeeResultMap" type="Employee">
    <constructor>
      <arg column="hireDate" javaType="java.sql.Date"/>
    </constructor>
    <id column="empNo" property="empNo"/>
    <result column="eName" property="eName"/>
    <result column="job" property="job"/>
    <result column="dal" property="dal"/>
    <result column="hireDate" property="hireDate"/>
    <result column="depNo" property="depNo"/>
    <association property="dept" javaType="Dept">
      <id column="depNo" property="depNo"/>
      <result column="depName" property="depName"/>
      <result column="loc" property="loc"/>
    </association>
  </resultMap>
  <select id="findByEmpNo" resultMap="EmployeeResultMap">
    select *
    from employee2 join dept
    on employee2.depNo = dept.depNo
    where empNo = #{empNo}
  </select>
</mapper>